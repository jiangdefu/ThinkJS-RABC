<link rel="stylesheet" type="text/css" href="/static/common/css/iconList.css" />
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" type='button' data-dismiss='modal' aria-hidden='true'></button>
            <h4 class="modal-title" id="ajaxModal">添加菜单 </h4>
        </div>
        <div class="modal-body">
            <div class="panel panel-default">
                <div class="panel-heading">

                </div>
                <div class="panel-body">
                    <form action="" class="form-horizontal">
                        <div class="control-group">
                            <label class="control-label">编码</label>
                            <div class="controls">
                                <input type="text" name="code" class="m-wrap" />
                                <span class="help-inline"> <i class="icon-exclamation-sign text-info"></i> 编码必须唯一</span>
                            </div>
                        </div>
                        <div class="control-group" style="position: relative;">
                            <label class="control-label">图标</label>

                            <div class="controls" style="position: relative;">
                                <div class="input-append">
                                    <input class="m-wrap" type="text" name="icon" readonly>
                                    <span class="add-on" style="cursor: pointer">选择</span>
                                </div>
                                <div class="iconList">
                                    <div class="titles" num=1>
                                        <i class="fa fa-chevron-circle-left pull-left" onclick="prevList(this)"></i>
                                        <span>图标集</span>
                                        <i class="fa fa-chevron-circle-right pull-right" onclick="nextList(this)"></i>
                                    </div>
                                    <div class="iconContent">
                                        <ul class="social-icons">
                                            {% for item in icon %}
                                                <li class="icon-name" data-value="{{item.value}}">
                                                    <a href="javascript:void(0)">
                                                        <i class="{{item.value}}"></i>
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">名称</label>
                            <div class="controls">
                                <input type="text" name="menu_name" class="m-wrap" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">地址</label>
                            <div class="controls">
                                <input type="text" name="url" class="m-wrap" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">排序</label>
                            <div class="controls">
                                <input type="text" name="sort" class="m-wrap" value="0"/>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">是否菜单</label>
                            <div class="controls">
                                <div class="switch" data-on="primary" data-off="info">
                                    <input type="checkbox" checked class="toggle" name="ismenu"/>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button id="add_close" type="button" data-dismiss='modal' style="display: none;"></button>
            <button class="btn btn-default" type='button'  onclick="add_save()">
                <span class="glyphicon glyphicon-remove">保存</span>
            </button>
            <button class="btn btn-default" type='button' data-dismiss='modal'>
                <span class="glyphicon glyphicon-remove">取消</span>
            </button>
        </div>
    </div>
</div>
<script>
    $(document).on("mousedown", function (e) {
        var e = e || window.event; //浏览器兼容性
        var elem = e.target || e.srcElement;
        while (elem) { //循环判断至跟节点，防止点击的是div子元素
            if (elem && elem == $(".iconList")[0]) {
                return;
            }
            elem = elem.parentNode;
        }
        $(".iconList").css('display', 'none'); //点击的不是div或其子元素
    })
</script>