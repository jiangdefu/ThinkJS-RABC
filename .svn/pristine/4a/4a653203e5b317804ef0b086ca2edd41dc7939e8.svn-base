{% include "../base/head.html" %}
{% block style %}{% endblock %}
<body class="page-header-fixed">
    {% include "../base/header.html" %}
    <div class="page-container">
        {% include "../base/menu.html" %}
        <div class="page-content">
            <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <div id="portlet-config" class="modal hide">
                <div class="modal-header">
                    <button data-dismiss="modal" class="close" type="button"></button>
                    <h3>Widget Settings</h3>
                </div>
                <div class="modal-body">
                    Widget settings form goes here
                </div>
            </div>
            <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <!-- BEGIN PAGE CONTAINER-->
            <div class="container-fluid">
                <!-- BEGIN PAGE HEADER-->
                <div class="row-fluid">
                    <div class="span12">
                        <!-- BEGIN STYLE CUSTOMIZER -->
                        <div class="color-panel hidden-phone">
                            <div class="color-mode-icons icon-color"></div>
                            <div class="color-mode-icons icon-color-close"></div>
                            <div class="color-mode">
                                <p>主题颜色</p>
                                <ul class="inline">
                                    <li class="color-black current color-default" data-style="default"></li>
                                    <li class="color-blue" data-style="blue"></li>
                                    <li class="color-brown" data-style="brown"></li>
                                    <li class="color-purple" data-style="purple"></li>
                                    <li class="color-grey" data-style="grey"></li>
                                    <li class="color-white color-light" data-style="light"></li>
                                </ul>
                                <label>
                                    <span>布局</span>
                                    <select class="layout-option m-wrap small">
                                        <option value="fluid" selected>Fluid</option>
                                        <option value="boxed">Boxed</option>
                                    </select>
                                </label>
                                <label>
                                    <span>头部</span>
                                    <select class="header-option m-wrap small">
                                        <option value="fixed" selected>Fixed</option>
                                        <option value="default">Default</option>
                                    </select>
                                </label>
                                <label>
                                    <span>导航</span>
                                    <select class="sidebar-option m-wrap small">
                                        <option value="fixed">Fixed</option>
                                        <option value="default" selected>Default</option>
                                    </select>
                                </label>
                                <label>
                                    <span>底部</span>
                                    <select class="footer-option m-wrap small">
                                        <option value="fixed">Fixed</option>
                                        <option value="default" selected>Default</option>
                                    </select>
                                </label>
                            </div>
                        </div>
                        <!-- END BEGIN STYLE CUSTOMIZER -->    
                        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                        <h3 class="page-title">
                            {% if controller.current_menu.child %}
                                {{controller.current_menu.child.name}} <small></small>
                            {% else %}
                              {% if controller.current_menu.parent %}
                                 {{controller.current_menu.parent.name}}
                              {% else %}
                              系统主页 <small></small>
                              {% endif %}
                            {% endif %}
                        </h3>
                        <ul class="breadcrumb">
                            <li>
                                <i class="icon-home"></i>
                                <a href="/admin/user/main">主页</a> 
                                {% if controller.current_menu.parent %}
                                    <i class="icon-angle-right"></i>
                                {% endif %}
                            </li>
                            {% if controller.current_menu.parent %}
                                <li>
                                    <a {% if controller.current_menu.parent.children %} href="javascipt:void(0)"{%else%} href="{{ controller.current_menu.parent.url}}"{%endif%}>{{ controller.current_menu.parent.name}}</a>
                                    {% if controller.current_menu.parent.children %}<i class="icon-angle-right"></i>{% endif %}
                                </li>
                            {% endif %}
                            {% if controller.current_menu.child %}
                                <li>
                                    <a href="{{ controller.current_menu.child.url}}">{{ controller.current_menu.child.name}}</a>
                                </li>
                            {% endif %}                                                      
                        </ul>
                        <!-- END PAGE TITLE & BREADCRUMB-->
                    </div>
                </div>
                <!-- END PAGE HEADER-->
			    {% block content %}{% endblock %}
            </div>    
		</div>
    </div>
	{% include "../base/footer.html" %}
    {% block js %}{% endblock %}
</body>
</html>
