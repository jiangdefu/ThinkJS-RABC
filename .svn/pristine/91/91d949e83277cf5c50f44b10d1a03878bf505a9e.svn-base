<link rel="stylesheet" type="text/css" href="/static/common/css/iconList.css" />
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" type='button' data-dismiss='modal' aria-hidden='true'></button>
            <h4 class="modal-title" id="ajaxModal">新增用户组 </h4>
        </div>
        <div class="modal-body">
            <div class="panel panel-default">
                <div class="panel-heading">

                </div>
                <div class="panel-body">
                    <form id="add_user_group_form" action="" class="form-horizontal">
                        <div class="control-group">
                            <label class="control-label">组编码</label>
                            <div class="controls">
                                <input type="text" name="code" class="m-wrap" />
                                <span class="help-inline"> <i class="icon-exclamation-sign text-info"></i> 编码必须唯一</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">组名称</label>
                            <div class="controls">
                                <input type="text" name="name" class="m-wrap" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">是否启用</label>
                            <div class="controls">
                                <div class="switch" data-on="primary" data-off="info">
                                    <input type="checkbox" checked class="toggle" name="status"/>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button id="add_close" type="button" data-dismiss='modal' style="display: none;"></button>
            <button class="btn btn-default" type='button'  onclick="add_save()">
                <span class="glyphicon glyphicon-remove">保存</span>
            </button>
            <button class="btn btn-default" type='button' data-dismiss='modal'>
                <span class="glyphicon glyphicon-remove">取消</span>
            </button>
        </div>
    </div>
</div>
