<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" type='button' data-dismiss='modal' id="edit_close" aria-hidden='true'></button>
            <h4 class="modal-title" id="ajaxModal"> 编辑字典配置 </h4>
        </div>
        <div class="modal-body">
            <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                    <form action="" class="form-horizontal" id="edit_form">
                        <input type="hidden" name="id" value="{{dict.id}}" />
                        <div class="control-group">
                            <label class="control-label">字典编码</label>
                            <div class="controls">
                                <input type="text" name="code" class="m-wrap" value="{{dict.code}}" />
                                <span class="help-inline"> <i class="icon-exclamation-sign text-info"></i> 编码必须唯一</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">字典名称</label>
                            <div class="controls">
                                <input type="text" name="name" class="m-wrap" value="{{dict.name}}" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">字典值</label>
                            <div class="controls">
                                <input type="text" name="value" class="m-wrap" value="{{dict.value}}"  />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">排序</label>
                            <div class="controls">
                                <input type="number" name="sort" class="m-wrap" value="{{dict.sort}}" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-default" type='button'  onclick="edit_save()">
                <span class="glyphicon glyphicon-remove">保存</span>
            </button>
            <button class="btn btn-default" type='button' data-dismiss='modal'>
                <span class="glyphicon glyphicon-remove">取消</span>
            </button>
        </div>
    </div>
</div>